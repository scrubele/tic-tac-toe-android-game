<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.TICTACTAOEGAME"
    tools:context=".activities.OfflinePageActivity">

    <LinearLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user1_name"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:freezesText="true"
            android:text="@string/player_1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:background="@drawable/mybutton"
            android:freezesText="true"
            android:text="@string/player_1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            app:backgroundTint="@color/AntiqueWhite" />

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/mybutton"
            android:freezesText="true"
            android:text="@string/player_1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            app:backgroundTint="@color/AntiqueWhite" />

        <TextView
            android:id="@+id/user2_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:freezesText="true"
            android:text="@string/player_2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_weight="1">


            <Button
                android:id="@+id/button_00"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="@color/Black"
                android:textSize="120sp"
                app:backgroundTint="@color/LightSkyBlue"
                tools:textStyle="bold" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                app:backgroundTint="@color/colorPrimaryGrey"
                tools:textStyle="bold" />

            <Button
                android:id="@+id/button_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/LightSkyBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:rotationX="0"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryGrey" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                app:backgroundTint="@color/LightSkyBlue" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryGrey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_weight="1">

            <Button
                android:id="@+id/button_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/LightSkyBlue" />

            <Button
                android:id="@+id/button_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryGrey" />

            <Button
                android:id="@+id/button_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:freezesText="true"
                android:textColor="@color/Black"
                android:textSize="120sp"
                android:textStyle="bold"
                app:backgroundTint="@color/LightSkyBlue" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_reset"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/reset" />

        <Button
            android:id="@+id/button_End"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:onClick="EndGame"
            android:text="@string/end_game" />
    </LinearLayout>


</LinearLayout>